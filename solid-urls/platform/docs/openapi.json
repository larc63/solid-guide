{
    "openapi": "3.1.0",
    "info": {
        "title": "Solid URLS",
        "description": "An angular frontend that provides a means to save a url and use a shortened version of it",
        "version": "1.0.0"
    },
    "servers": [
        {
            "url": "http://localhost:3000",
            "description": "Generated expressjs server url"
        }
    ],
    "paths": {
        "/": {
            "get": {
                "tags": ["#com-solid-urls"],
                "summary": "Client app's html",
                "description": "Provide the client (angular) app where users can add a new url to be shortened",
                "operationId": "",
                "responses": {
                    "200": {
                        "description": "OK",
                        "content": {
                            "text/html": {}
                        }
                    }
                }
            },
            "post": {
                "tags": ["#com-solid-urls"],
                "summary": "Create a new shortened url",
                "description": "Create a new shortened url",
                "operationId": "createNote",
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/com.solid.url.model.urlRequest"
                            }
                        }
                    },
                    "required": true
                },
                "responses": {
                    "201": {
                        "description": "url created",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/com.solid.url.model.urlResult"
                                }
                            }
                        }
                    },
                    "default": {
                        "description": "default response",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/com.solid.url.model.urlResult"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/{id}": {
            "get": {
                "tags": ["#com-solid-urls"],
                "summary": "Retrieve the url from the provided id in the route",
                "description": "Respond with 404 if no match for other paths",
                "operationId": "return404Error",
                "responses": {
                    "302": {
                        "description": "url found",
                        "content": {
                            "text/html": {}
                        }
                    },
                    "default": {
                        "description": "url not found, redirect to root",
                        "content": {
                            "text/html": {}
                        }
                    }
                }
            }
        }
    },
    "components": {
        "schemas": {
            "com.solid.url.model.urls": {
                "additionalProperties": false,
                "properties": {
                    "id": {
                        "type": "integer",
                        "format": "int32"
                    },
                    "url": {
                        "type": "string"
                    }
                }
            },
            "com.solid.url.model.urlRequest": {
                "additionalProperties": false,
                "properties": {
                    "url": {
                        "type": "string"
                    }
                }
            },
            "com.solid.url.model.urlResult": {
                "additionalProperties": false,
                "properties": {
                    "short_url": {
                        "type": "string"
                    },
                    "url": {
                        "type": "string"
                    }
                }
            }
        }
    }
}
