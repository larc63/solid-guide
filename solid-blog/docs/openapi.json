{
  "openapi": "3.1.0",
  "info": {
    "title": "Solid Blog",
    "description": "A basic react -> (express+sequelize) -> sqlite blog platform",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://localhost:3000",
      "description": "Generated expressjs server url"
    }
  ],
  "paths": {
    "/user/create": {
      "post": {
        "tags": [
          "code-first-application"
        ],
        "summary": "Signup new user",
        "description": "Create a new user in the system",
        "operationId": "createUser",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/com.solid.blog.model.User"
              }
            }
          },
          "required": true
        },
        "responses": {
          "201": {
            "description": "Note created",
            "content": {
              "application/json": {
                "schema": {}
              }
            }
          },
          "default": {
            "description": "default response",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/com.solid.blog.model.Error"
                }
              }
            }
          }
        }
      }
    },
    "/login": {
      "post": {
        "tags": [
          "code-first-application"
        ],
        "summary": "Login user ",
        "description": "Create a new user session",
        "operationId": "loginUser",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/com.solid.blog.model.User"
              }
            }
          },
          "required": true
        },
        "responses": {
          "201": {
            "description": "User logged in",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/com.solid.blog.model.AuthToken"
                }
              }
            }
          },
          "401": {
            "description": "User not authorized",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/com.solid.blog.model.Error"
                }
              }
            }
          },
          "default": {
            "description": "default response",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/com.solid.blog.model.Error"
                }
              }
            }
          }
        }
      }
    },
    "/posts/{postId}": {
      "get": {
        "tags": [
          "code-first-application"
        ],
        "summary": "Get post by ID",
        "description": "Retrieve a post by its ID",
        "operationId": "getPostById",
        "parameters": [
          {
            "name": "postId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer",
              "format": "int32"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Note found",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/com.solid.blog.model.User"
                }
              }
            }
          },
          "default": {
            "description": "default response",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/com.solid.blog.model.Error"
                }
              }
            }
          }
        }
      }
    },
    "/*": {
      "get": {
        "tags": [
          "#com-solid-blog"
        ],
        "summary": "Catch all to respond with error s",
        "description": "Respond with 404 if no match for other paths",
        "operationId": "return404Error",
        "responses": {
          "default": {
            "description": "error response",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/com.solid.blog.model.Error"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "com.solid.blog.model.Error": {
        "additionalProperties": false,
        "properties": {
          "code": {
            "type": "integer",
            "format": "int32"
          },
          "message": {
            "type": "string"
          }
        }
      },
      "com.solid.blog.model.User": {
        "additionalProperties": false,
        "properties": {
          "user_id": {
            "type": "integer",
            "format": "int32"
          },
          "name": {
            "type": "string"
          },
          "posts": {
            "type": "array"
          }
        }
      },
      "com.solid.blog.model.Post": {
        "additionalProperties": false,
        "properties": {
          "post_id": {
            "type": "integer",
            "format": "int32"
          },
          "title": {
            "type": "string"
          },
          "date": {
            "type": "integer",
            "format": "int32"
          },
          "content": {
            "type": "string"
          }
        }
      },
      "com.solid.blog.model.Comment": {
        "additionalProperties": false,
        "properties": {
          "comment_id": {
            "type": "integer",
            "format": "int32"
          },
          "post_id": {
            "type": "integer",
            "format": "int32"
          },
          "content": {
            "type": "string"
          }
        }
      }
    }
  }
}