{
  "openapi": "3.1.0",
  "info": {
    "title": "Solid TODO",
    "description": "A basic react -> (express+sequelize) -> postgres application for notes",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://localhost:3000",
      "description": "Generated expressjs server url"
    }
  ],
  "paths": {
    "/notes": {
      "get": {
        "tags": [
          "#com-solid-todo"
        ],
        "summary": "Get all the user's notes",
        "description": "Retrieve a list of all notes",
        "operationId": "getNotes",
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/com.solid.todo.model.ListItem"
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "tags": [
          "code-first-application"
        ],
        "summary": "Create a note",
        "description": "Create a new note in the system",
        "operationId": "createNote",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/com.solid.todo.model.ListItem"
              }
            }
          },
          "required": true
        },
        "responses": {
          "201": {
            "description": "Note created",
            "content": {
              "application/json": {
                "schema": {}
              }
            }
          },
          "default": {
            "description": "default response",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/com.solid.todo.model.Error"
                }
              }
            }
          }
        }
      }
    },
    "/login": {
      "post": {
        "tags": [
          "code-first-application"
        ],
        "summary": "Create a note",
        "description": "Create a new note in the system",
        "operationId": "createNote",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/com.solid.todo.model.ListItem"
              }
            }
          },
          "required": true
        },
        "responses": {
          "201": {
            "description": "Note created",
            "content": {
              "application/json": {
                "schema": {}
              }
            }
          },
          "default": {
            "description": "default response",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/com.solid.todo.model.Error"
                }
              }
            }
          }
        }
      }
    },
    "/notes/{noteId}": {
      "get": {
        "tags": [
          "code-first-application"
        ],
        "summary": "Get note by ID",
        "description": "Retrieve a note by its ID",
        "operationId": "getNoteById",
        "parameters": [
          {
            "name": "noteId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer",
              "format": "int32"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Note found",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/com.solid.todo.model.ListItem"
                }
              }
            }
          },
          "default": {
            "description": "default response",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/com.solid.todo.model.Error"
                }
              }
            }
          }
        }
      }
    },
    "/*": {
      "get": {
        "tags": [
          "#com-solid-todo"
        ],
        "summary": "Catch all to respond with error s",
        "description": "Respond with 404 if no match for other paths",
        "operationId": "return404Error",
        "responses": {
          "default": {
            "description": "error response",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/com.solid.todo.model.Error"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "com.solid.todo.model.Error": {
        "additionalProperties": false,
        "properties": {
          "code": {
            "type": "integer",
            "format": "int32"
          },
          "message": {
            "type": "string"
          }
        }
      },
      "com.solid.todo.model.TODOList": {
        "additionalProperties": false,
        "properties": {
          "id": {
            "type": "integer",
            "format": "int32"
          },
          "title": {
            "type": "string"
          },
          "items": {
            "type": "array"
          }
        }
      },
      "com.solid.todo.model.ListItem": {
        "additionalProperties": false,
        "properties": {
          "item_id": {
            "type": "integer",
            "format": "int32"
          },
          "owner": {
            "type": "integer",
            "format": "int32"
          },
          "title": {
            "type": "string"
          },
          "rank": {
            "type": "integer",
            "format": "int32"
          }
        }
      }
    }
  }
}